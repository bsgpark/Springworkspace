<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean class = "org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
	<property name="locations">
		<list>
			<value>test03/jdbc.properties</value>
		</list>
		
	</property>
</bean>

<!-- 데이터베이스 소스 -->
<bean id = "dataSource" class = "org.springframework.jdbc.datasource.DriverManagerDataSource"
p:driverClassName="${driverClassName}"
p:url="${url}"
p:username="${username}"
p:password="${password}"/>
<bean class = "org.springframework.jdbc.core.JdbcTemplate" id = "jdbcTemplate" p:dataSource-ref = "dataSource"/>
<bean id = "test" class = "test03.FirstJdbcDaoImpl" p:jdbcTemplate-ref="jdbcTemplate"/>
</beans>
